{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 600,
  "title": "Victorian Crashes",
  "params": [
    {
"name": "zoom_level",
"value": 4500,
"bind": {
"input": "range",
"min": 1000,
"max": 60000,
"step": 100,
"name": "Zoom: "
}
},
{
"name": "center_to",
"value": [145, -36.95],
"bind": {
"input": "select",
"options": [
[145, -36.95],
[144.3, -38.1],
[144.9, -36.7],
[147.1, -38.1]
],
"labels": ["Melbourne CBD", "Geelong", "Bendigo", "Sale"],
"name": "Map Centre: "
}
}
],
  "projection": {"type": "mercator","center": {"expr": "center_to"},"scale": {"expr": "zoom_level"}},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/edward-wong27/Fit3179_Vis2/main/css/vic_localities.topojson",
        "format": {"type": "topojson", "feature": "vic_localities"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/edward-wong27/Fit3179_Vis2/main/data/NODE.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "LGA_NAME"}},
      "encoding": {
        "longitude": {"field": "Long", "type": "quantitative"},
        "latitude": {"field": "Lat", "type": "quantitative"}
      }
    }
  ],
  "config": {}
}