{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/edward-wong27/Fit3179_Vis2/main/data/ACCIDENT.csv"},
"params": [
  {
    "name": "Vehicle_selection",
    "bind":{
      "input": "select",
      "options": [
        null,
        "Car",
        "Bicycle",
        "Bus/Coach",
        "Motor Cycle",
        "Taxi",
        "Train",
        "Tram",
        "Unknown",
        "Other Vehicle"
      ],
      "labels": [
        "Show All",
        "Car",
        "Bicycle",
        "Bus/Coach",
        "Motor Cycle",
        "Taxi",
        "Train",
        "Tram",
        "Unknown",
        "Other Vehicle"
      ],
      "name": "Vehicle Selection"
    }
  }
],
"transform": [
  {"filter": "Vehicle_selection == null || datum.VehicleType == Vehicle_selection"}
],

  "mark": "bar",
  "encoding": {
    "x": {
      "timeUnit": "month",
      "field": "Date",
      "type": "ordinal",
      "title": "Month of the year"
    },
    "y": {
      "aggregate": "count",
      "type": "quantitative",
      "title": "Total Crashes"
    },
      "color": {
      "field": "Vehicle Type Desc",
      "type": "nominal",
      "scale": {
        "domain": ["Car", "Bicycle", "Bus/Coach", "Motor Cycle", "Other Vehicle", "Taxi","Train","Tram", "Truck", "Unknown"],
        "range": ["#FF0A00", "#00F5FF", "#FFA300", "#005CFF", "#C8FF00","#3700FF","#E62A19","#19D5E6","#7D1CE3","#82E31C"]
      },
      "title": "Vehicle type"
      },
  "tooltip":[
    {"field": "Vehicle Type Desc", "type": "nominal"},
    {"field" : "Date", "timeUnit": "year", "type": "ordinal"},
    {"aggregate": "count", "type": "quantitative", "title": "Crash Count"}
  ]
  }
}
